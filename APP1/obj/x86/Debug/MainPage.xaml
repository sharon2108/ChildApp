            </Button.Template>
        </Button>
        <Button x:ConnectionId='4' Height="350" Width="350" HorizontalAlignment="Right" VerticalAlignment="Bottom"                            >
            <Button.Template>
                <ControlTemplate>
                    <Image Source="friends.jpg" />
                </ControlTemplate>
