            <Button.Template>
                <ControlTemplate>
                    <Image Source="father.jpg" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Height="267" Width="272" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click_Friend" Margin="0,84,10,0">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="friends.jpg" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Height="279" Width="282" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click_Friend">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="friends.jpg" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox HorizontalAlignment="Stretch" Width="1014" Height="78" TextWrapping="Wrap" Text="אני רוצה לספר ל...." VerticalAlignment="Top"  TextChanged="TextBox_TextChanged" Background="AntiqueWhite" FontSize="12" Foreground="Teal" FontFamily="Century Gothic" />
    </Grid>
</Page>
